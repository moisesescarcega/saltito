---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import Card from "../components/Card.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Proyecto:</div>
    <div class="text-5xl font-bold">Palapa con asador exterior</div>
    <div class="text-3xl py-3 font-bold">Saltito de Guadalupe, San Miguel de Allende, Gto.</div>
    <div class="py-2">
      <text class="text-lg">
        <b>Propietarios:</b> César Gil, Ángela Nava<br />
        <b>Proyecto:</b> Arquitectos Moisés Escárcega y Gabriela Díaz | ARESDI<br />
        <a href="https://aresdi.com/" target="_blank">aresdi.com</a>
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="/blog" target="_self"> Bitácora</a>
      <a href="/cv" target="_self" class="btn btn-outline ml-5">
        Proyecto
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">Enlaces:</div>
  </div>

  <div class="w-full grid grid-cols-1 md:grid-cols-2">
    <HorizontalCard
      class="w-full"
      title="Planos"
      img="https://aresdico.s3.amazonaws.com/palapasaltito/mem01.jpg"
      desc="Descarga de arquitectónicos, instalaciones, albañilería y detalles"
      url="https://palapasaltito.aresdi.com/planos/planos.zip"
      target="_blank"
    />
    <HorizontalCard
      title="Modelo 3D"
      img="https://palapasaltito.aresdi.com/fotos/asador_saltito_3d.png"
      desc="Visualización de los detalles constructivos en línea"
      url="https://palapasaltito.aresdi.com/ifc"
      target="_blank"
    />
  </div>


